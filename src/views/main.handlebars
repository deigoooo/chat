<script src="/js/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>

<style>
    .container-fluid {
        background-color: #161925;
        display: flex;
        width: 100vw;
        height: 100vh;
        padding: 0px;
        margin: 0;
        overflow: hidden;
    }


    .navbar {
        display: flex;
        background-color: #F1D302;
        width: 100%;
        height: 2.5rem;
        justify-content: flex-start;
    }

    #menu {
        display: flex;
        width: 100vw;
        list-style-type: none;
        justify-content: space-evenly;
    }

    #menu li a {
        color: #161925;
        text-decoration: none;

    }

    .logged {
        display: none;
    }

    #profile {
        background-color: #F1D302;
        list-style-type: none;
        padding: 15px;
        position: absolute;
        opacity: 0;
        transition: opacity 0.3s ease;
        box-shadow: 4px 4px 10px 5px rgba(0, 0, 0, 0.3);
    }

    .logged:hover #profile {
        display: block;
        opacity: 1;
    }
</style>

<div class="container-fluid d-flex">
    <div class="navbar">
        <ul id="menu">
            <li><a href="#">Inicio</a></li>
            <li class="logged"><a href="#">Perfil</a>
                <ul id="profile">
                    <li>User id: <a id="itsLog">{{_id}}</a></li>
                    <li>Nombre: {{first_name}} {{last_name}}</li>
                    <li>Email: {{email}}</li>
                    <li>Edad:{{age}}</li>
                    <li>Rol: {{role}}</li>
                    <li><button>Modificar</button></li>
                </ul>
            </li>
            <li class="logged"><a href="#">Chats</a></li>
            <li id="login"><a href="/views/login">Login</a></li>
            <li class="logged"><a href="/session/logout">Salir</a></li>
        </ul>
    </div>
    <div class="logged">
        <div class="chat-messages" id="chatMessages">
            <!-- Aquí se mostrarán los mensajes -->
        </div>
        <div class="chat-input">
            <input type="text" id="chatInput" placeholder="Escribe un mensaje...">
            <button onclick="sendMessage()">Enviar</button>
        </div>
    </div>
</div>